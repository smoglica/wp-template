{
  "name": "wp-template",
  "version": "1.0.0",
  "description": "A basic WordPress theme template.",
  "author": "Skender Moglica <moglica.s@gmail.com>",
  "license": "ISC",
  "private": true,
  "engines": {
    "node": ">= 6.9.0",
    "npm": ">= 4.0.0"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production node build/build.js",
    "serve": "cross-env NODE_ENV=development node build/dev-server.js",
    "start": "cross-env NODE_ENV=development webpack --config build/webpack.dev.js",
    "docker:serve": "bash bin/serve.sh",
    "docker:build": "bash bin/build.sh"
  },
  "keywords": [
    "Wordpress",
    "Template"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "autoprefixer": "^9.6.0",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "bs-html-injector": "^3.0.3",
    "case-sensitive-paths-webpack-plugin": "^2.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "cross-env": "^5.2.0",
    "css-loader": "^3.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-formatter-friendly": "^6.0.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "husky": "^2.7.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "lint-staged": "^8.2.1",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "resolve-url-loader": "^3.1.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^15.10.1",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-scss": "^3.8.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "svg-sprite-loader": "^4.1.6",
    "svgo": "^1.2.2",
    "svgo-loader": "^2.2.1",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.1",
    "webpack-module-hot-accept": "^1.0.5",
    "webpackbar": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,css,scss,md,html}": [
        "prettier --write",
        "git add"
      ],
      "*.{scss}": [
        "stylelint --syntax=scss --fix",
        "git add"
      ],
      "*.{php}": [
        "composer php:fix",
        "composer php:lint",
        "git add"
      ]
    },
    "ignore": [
      "dist/**/*"
    ]
  }
}
