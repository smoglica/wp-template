{
  "name": "ske/wp-template",
  "description": "A basic WordPress theme template",
  "version": "1.0.0",
  "keywords": [
    "phpcs",
    "standards",
    "WordPress"
  ],
  "authors": [
    {
      "name": "Skender Moglica",
      "email": "moglica.s@gmail.com",
      "homepage": "http://skendermoglica.it"
    }
  ],
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "wp-coding-standards/wpcs": "^1.2",
